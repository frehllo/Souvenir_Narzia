<Window x:Class="Souvenir_Narzia.Cassa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Souvenir_Narzia"
        mc:Ignorable="d"
        Title="Cassa" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image VerticalAlignment="Top" Margin="0,30,0,0" Source="cassa.png" Height="150" Width="150"/>
            <Label Margin="0,10,0,0" FontSize="20" Content="Pagamento Effettuato" HorizontalAlignment="Center"></Label>
            <Button Content="Back" FontSize="20" Width="150" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
