<Window x:Class="Biglietteria_Narzia.WindowUsername"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biglietteria_Narzia"
        mc:Ignorable="d"
        Title="WindowUsername" Height="300" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Username"></Label>
            <TextBox x:Name="username_txt" Height="20" Width="120"></TextBox>
            <Button Height="20" Width="120" Content="Next" Margin="0,10,0,0" Click="Button_Click"></Button>
            <Label Name="lbl_error_username" Content="" FontSize="10" Foreground="Red" Margin="0,20,0,0"></Label>
        </StackPanel>
    </Grid>
</Window>
