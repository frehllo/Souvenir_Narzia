<Window x:Class="Biglietteria_Narzia.WindowAddAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biglietteria_Narzia"
        mc:Ignorable="d"
        Title="WindowAddAccount" Height="500" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="SignUp" FontSize="25" HorizontalAlignment="Center" Margin="0,0,0,30"></Label>
            <Label Content="Name"></Label>
            <TextBox x:Name="txt_n" Height="30" Width="140"></TextBox>
            <Label Content="Surname"></Label>
            <TextBox x:Name="txt_c" Height="30" Width="140"></TextBox>
            <Label Content="Username"></Label>
            <TextBox x:Name="txt_username" Height="30" Width="140"></TextBox>
            <Label Content="Password"></Label>
            <TextBox x:Name="txt_pass" Height="30" Width="140"></TextBox>
            <Button Height="30" Width="140" Content="Create Account" Margin="0,10,0,0" Click="Button_Click"></Button>
            <Label Name="lbl_error_account" Content="" Foreground="Red" FontSize="10"></Label>
        </StackPanel>
    </Grid>
</Window>
